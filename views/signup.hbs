<section class="title">
    <div class="container-fluid nav-container">
        {{>navbar}}
    </div>
</section>

<section class="container-fluid form-layout" >
    <section class="row justify-content-center">
        <form class="form-container" id="form-signup" action="/signup/newUser" method="POST">
            <a class="navbar-brand" href="/">Shhh.</a>
            <p> We recommend coming up with a unique username <br> which you don't use on any other platforms, or try <br> the button below to randomly generate a username.</p>
            <br>
            <div class="form-group">
                <input name="username" class="form-control" id="inputUsername" placeholder="Username" autocomplete="off">
            </div>
            <div class="form-group">
                <button onclick="" class="btn btn-outline-light btn-lg btn-block">Generate Username</button>
                <br>
            </div>
            <div class="form-group">
                <input name="password" type="password" class="form-control" id="inputPassword" placeholder="Password" autocomplete="off">
                <br>
            </div>
            <button type="submit" class="btn btn-outline-light btn-lg btn-block">Sign Up</button>
        </form>
    </section>
</section>